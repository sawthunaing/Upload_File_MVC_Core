@model Upload_File_MVC_Core.Models.FileUploadViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }
    </style>
</head>
<body>
<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
    @Html.AntiForgeryToken()
    <span>Select File:</span>
    
    <input type="file"  asp-for="PostedFile" name="PostedFile" accept=".xml,.csv" />
    <span asp-validation-for="PostedFile" style="color:red"></span>

    <input type="submit" value="Upload"  />
    <br />

    <span style="color:green">@Html.Raw(ViewBag.Message)</span>
    <span style="color:red">@Html.Raw(ViewBag.ErrorMessage)</span>


</form>
</body>



</html>
